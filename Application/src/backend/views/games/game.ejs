<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/game.css" />
  <title>Game <%= id %>
  </title>
</head>

<body>
  <!-- Welcome / Game Info -->
  <div class="welcome-container">
    <div class="header">
      <div>
        <div class="game-info">
          <%= name %> with max players <%= capacity %>, created at
              <%= (new Date(created_at)).toLocaleDateString() %> by
                <%= host_username %>
        </div>
      </div>
      <a href="/lobby" class="back-btn">Leave Game</a>
    </div>
  </div>

  <!-- Game Container -->
  <div class="game-container">
    <!-- Opponents Area -->
    <div class="opponents-area" id="opponentsArea">
      <!-- Example opponent layout (static for now) -->
      <div class="opponent">
        <div class="opponent-info">
          <div class="opponent-name">Player 1</div>
          <div class="opponent-card-count">7 cards</div>
        </div>
        <div class="opponent-hand">
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
        </div>
      </div>

      <div class="opponent">
        <div class="opponent-info active-player">
          <div class="opponent-name">Player 2</div>
          <div class="opponent-card-count active-turn">7 cards</div>
        </div>
        <div class="opponent-hand">
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
        </div>
      </div>

      <div class="opponent">
        <div class="opponent-info">
          <div class="opponent-name">Player 3</div>
          <div class="opponent-card-count">7 cards</div>
        </div>
        <div class="opponent-hand">
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
          <div class="opponent-card"></div>
        </div>
      </div>
    </div>

    <!-- Center Play Area -->
    <div class="play-area">
      <!-- Direction Indicator -->
      <div class="direction-indicator">
        <span id="directionText">Playing</span>
        <span class="direction-arrow" id="directionArrow">â†’</span>
      </div>

      <!-- Draw Pile -->
      <div class="pile-container">
        <div class="pile-cards">
          <div class="draw-pile-stack" id="drawPile">
            <div class="draw-pile-card">ðŸ‚ </div>
            <div class="draw-pile-card">ðŸ‚ </div>
            <div class="draw-pile-card">ðŸ‚ </div>
          </div>
        </div>
        <div class="pile-label">
          <span id="drawPileCount">80</span> cards
        </div>
      </div>

      <!-- Discard Pile -->
      <div class="pile-container">
        <div class="pile-cards">
          <div class="discard-pile-stack">
            <div class="discard-pile-shadow"></div>
            <div id="discardCard" class="uno-card card-red">7</div>
          </div>
        </div>
        <div class="pile-label">Discard</div>
      </div>
    </div>

    <!-- Turn Indicator -->
    <div class="turn-indicator">
      <div id="turnText" class="turn-text your-turn"> Your Turn</div>
    </div>

    <!-- Player Hand -->
    <div class="player-hand-container">
      <div class="hand-header">
        <div class="hand-info">
          Your Hand (<span id="playerCardCount">7</span> cards)
        </div>
        <div class="hand-actions">
          <button id="unoBtn" class="uno-btn hidden">
            UNO!
          </button>
          <button id="playCardBtn" class="play-card-btn hidden">
            Play Card
          </button>
        </div>
      </div>
      <div class="player-cards" id="playerCards">
        <div class="player-card-wrapper">
          <div class="uno-card player-card card-red clickable">3</div>
        </div>
        <div class="player-card-wrapper">
          <div class="uno-card player-card card-yellow clickable">âŸ²</div>
        </div>
        <div class="player-card-wrapper">
          <div class="uno-card player-card card-green clickable">7</div>
        </div>
        <div class="player-card-wrapper">
          <div class="uno-card player-card card-blue clickable">+2</div>
        </div>
        <div class="player-card-wrapper">
          <div class="uno-card player-card card-red clickable">9</div>
        </div>
        <div class="player-card-wrapper">
          <div class="uno-card player-card card-wild clickable">â˜…</div>
        </div>
        <div class="player-card-wrapper">
          <div class="uno-card player-card card-wild clickable">â˜…+4</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Color Picker Modal -->
  <div class="color-picker-overlay" id="colorPickerOverlay">
    <div class="color-picker">
      <h2 class="color-picker-title">Choose a Color</h2>
      <div class="color-options">
        <div class="color-option red">ðŸ”´</div>
        <div class="color-option blue">ðŸ”µ</div>
        <div class="color-option green">ðŸŸ¢</div>
        <div class="color-option yellow">ðŸŸ¡</div>
      </div>
    </div>
  </div>
</body>

</html>