      // Helper: play any card to discard
      function playCardToDiscard(card) {
        if (!card) return;
        if (!discardCard) {
          console.warn("[game-animations] #discardCard not found");
          return;
        }

        const cardWrapper = card.closest(".player-card-wrapper");

        // Get positions for the animation
        const startRect = card.getBoundingClientRect();
        const endRect = discardCard.getBoundingClientRect();

        const startCenterX = startRect.left + startRect.width / 2;
        const startCenterY = startRect.top + startRect.height / 2;
        const endCenterX = endRect.left + endRect.width / 2;
        const endCenterY = endRect.top + endRect.height / 2;

        const deltaX = endCenterX - startCenterX;
        const deltaY = endCenterY - startCenterY;

        // Create clone
        const flying = card.cloneNode(true);
        flying.classList.remove("selected");
        flying.classList.add("flying-card");

        flying.style.left = startRect.left + "px";
        flying.style.top = startRect.top + "px";
        flying.style.width = startRect.width + "px";
        flying.style.height = startRect.height + "px";
        flying.style.transform = "translate(0, 0) scale(1)";
        flying.style.opacity = "1";

        document.body.appendChild(flying);

        // Trigger movement
        requestAnimationFrame(() => {
          requestAnimationFrame(() => {
            flying.style.transform =
              "translate(" + deltaX + "px, " + deltaY + "px) scale(0.9)";
            flying.style.opacity = "0.9";
          });
        });

        flying.addEventListener(
          "transitionend",
          () => {
            flying.remove();

            // Copy the number/symbol
            discardCard.textContent = card.textContent;

            // Copy the color
            const baseClasses = ["uno-card"];
            const colorClasses = ["card-red", "card-blue", "card-green", "card-yellow", "card-wild"];
            const selectedClasses = card.className.split(" ");

            const newClasses = [...baseClasses];

            selectedClasses.forEach((cls) => {
              if (colorClasses.includes(cls)) {
                newClasses.push(cls);
              }
            });

            discardCard.className = newClasses.join(" ");

            // Check if this card is a reverse card
            const isReverseCard = card.textContent && card.textContent.includes("âŸ²");

            if (isReverseCard) {
              isClockwise = !isClockwise;
              updateDirectionUI();
            }


            // Remove card from hand
            if (cardWrapper) {
              cardWrapper.remove();
            }

            selectedCard = null;
          },
          { once: true }
        );
      }

